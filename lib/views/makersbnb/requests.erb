<!DOCTYPE html>
<html>
  <head>
    <title>A DIY BNB</title>
    <% if @user %>
      <h4> Logged in as <%= @user.email%></h4>
      <form action="/makersbnb/sessions/logout" method="POST">
        <input type="submit" value="Log out">
      </form>
    <% end %>
    <a href="/makersbnb/about" >About us</a>
    <br>
    <a href="/makersbnb/requests" >Requests</a>
  </head>
  <br></br>
  <body>
  <h5>requests for bookings</h5>
    <% @guest_requests.each do |request| %>
      <button><%= request[:start_date] %></button>
    <% end %>
   <br></br>
   <h5>requests for property</h5>
    <% @host_requests.each do |requests| %>
      <li><%= requests[:start_date] %></li>
    <% end %>
  </body>
</html>
